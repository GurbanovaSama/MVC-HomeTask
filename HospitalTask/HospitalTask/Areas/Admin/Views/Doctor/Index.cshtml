@model IEnumerable<Doctor>;

<a type="button" class="btn btn-success mb-3" asp-area="Admin" asp-controller="Doctor" asp-action="Create">Create Doctor</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model=> model.HospitalDoctors)
            </th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (Doctor item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td>
                    @foreach (var hospital in item.HospitalDoctors)
                    {

                        <spam>@hospital.Hospital.Name</spam>
                    }
                </td>

                <td><a class="btn btn-primary" asp-area="Admin" asp-controller="Doctor" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td><a class="btn btn-primary" asp-controller="Doctor" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin">Delete</a></td>
            </tr>
        }

    </tbody>
</table>
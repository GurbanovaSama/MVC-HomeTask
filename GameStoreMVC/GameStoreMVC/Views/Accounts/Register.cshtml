@using GameStoreMVC.DTOs.UserDTOs;
@model CreateUserDto;

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <form class="user" method="post">
                                <div class="form-group row mb-3">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input class="form-control form-control-user" asp-for="FirstName">
                                    </div>
                                    <div class="col-sm-6">
                                        <input class="form-control form-control-user" asp-for="LastName">
                                    </div>
                                </div>
                                <div class="form-group mb-3">
                                    <input class="form-control form-control-user" asp-for="Email" >
                                </div>
                                <div class="form-group mb-3">
                                    <input class="form-control form-control-user" asp-for="Username">
                                </div>
                                <div class="form-group row mb-3">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input class="form-control form-control-user" asp-for="Password" >
                                    </div>
                                    <div class="col-sm-6 mb-3">
                                        <input class="form-control form-control-user" asp-for="ConfirmPassword">
                                    </div>
                                    <div class="row mb-3">
                                        <div class="col-md-12">
                                            <p class="text-danger">
                                                @Html.ValidationSummary()
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <button class="btn btn-primary btn-user btn-block" type="submit">
                                    Register Account
                                </button>
                                <hr>
							</form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" asp-action="Login">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
